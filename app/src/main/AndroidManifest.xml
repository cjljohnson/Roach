<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jamieadkins.gwent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gwent">

        <activity
            android:name=".CardListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gwent.NoActionBar">
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gwent.NoActionBar">
        </activity>
        <activity android:name=".base.SignInActivity"
            android:theme="@style/Theme.Gwent.NoActionBar.Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>