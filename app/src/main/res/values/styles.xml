<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Gwent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Gwent" parent="Base.Theme.Gwent">
        <!-- Don't need to do anything here. Used for API level changes. -->
    </style>

    <style name="Theme.Gwent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gwent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gwent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
